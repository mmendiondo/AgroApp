
<%= grid(@establecimientos, show_filters: :when_filtered, upper_pagination_panel: true, html: {class: 'my-grid'}, header_tr_html:  {class: 'my-header'}) do |g|

  g.column name: 'ID', attribute: 'id',  custom_filter: :auto
  g.column name: 'Nombre', attribute: 'nombre', custom_filter: :auto, auto_reload:  true
  g.column name: 'Descripcion', attribute: 'descripcion' , filter: false
  g.column name: 'Precio', attribute: 'precio' , filter: false

  g.column in_csv: false do |item|
	link_to t('.edit', :default => t("helpers.links.edit")),
              edit_establecimiento_path(item), :class => 'btn btn-default'
  end
  g.column in_csv: false do |item|
	link_to t('.destroy', :default => t("helpers.links.destroy")),
              establecimiento_path(item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger'
    end

end -%>
